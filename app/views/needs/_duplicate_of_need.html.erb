<%= semantic_form_for @need, { url: closed_need_path(@need) } do |f| %>
  <%= f.input :duplicate_of,
              :hint => "ID of the need that this duplicates",
              :input_html => { :type => :text,
                :pattern => "[0-9]*"
              }
            %>

  <%= f.actions do %>
    <%= f.action :submit,
                 :button_html => {
                   :value => "Close as duplicate",
                   :class => "btn btn-danger"
                 }
               %>
  <% end %>

<% end %>
